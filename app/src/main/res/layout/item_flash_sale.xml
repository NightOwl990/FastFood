<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/cart1_background"
    android:elevation="3dp"
    android:id="@+id/relative_item_food_sale">

    <LinearLayout
        android:layout_marginStart="2dp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_sale"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="50%"
            android:textStyle="bold"
            android:textColor="#FF5722"/>
        <LinearLayout
            android:layout_weight="3"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/tv_ten_flash_sale"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên food"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="10sp"
                    android:foreground="@drawable/strikethrough"
                    android:layout_marginStart="5dp"
                    android:id="@+id/tv_gia_cu_flash_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200000"/>
                <TextView
                    android:textSize="10sp"
                    android:foreground="@drawable/strikethrough"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/tv_gia_moi_flash_sale"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá food"/>
                <TextView
                    android:layout_marginStart="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VNĐ"
                    android:textSize="8sp"
                    android:textColor="#FF5722"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_mua_flash_sale"
            android:layout_marginEnd="5dp"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Mua"
            android:textSize="7sp" />

    </LinearLayout>

</RelativeLayout>